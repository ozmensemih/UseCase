@using UseCase.MVC.App_Start
@using Microsoft.AspNetCore.Mvc.Rendering
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - UseCase.MVC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    @await Html.PartialAsync("Partial/_Header", (UserLoginData)Context.Items["User"]);
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - UseCase.MVC - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

<script>

    function selectSubscriptionType()
    {
        
        var subjectIdNode = document.getElementById('SubscriptionType');
        var value =subjectIdNode.options[subjectIdNode.selectedIndex].value;
        if (value == 1) {
            document.getElementById("IdentityNumberLabel").textContent = "IdentityNumber";
            document.getElementById("IdentityNumber").placeholder = "IdentityNumber";
        } else if (value == 2) {
            document.getElementById("IdentityNumberLabel").textContent = "TaxtNumber";
            document.getElementById("IdentityNumber").placeholder ="TaxtNumber";
        }
            
    }


</script>
</body>
</html>
